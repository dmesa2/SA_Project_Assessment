<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a New Development Environment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Create a New Development Environment</h1>
        <form id="createPodForm">
            <!-- Environment Name (Pod Name) -->
            <div class="mb-3">
                <label for="envName" class="form-label">Environment Name:</label>
                <input type="text" class="form-control" id="envName" name="envName" placeholder="e.g. dev-env" required>
            </div>

            <!-- Docker Image Input -->
            <div class="mb-3">
                <label for="image" class="form-label">Docker Image:</label>
                <input type="text" class="form-control" id="image" name="image" placeholder="e.g. nginx:latest" required>
            </div>

            <!-- CPU Request Input -->
            <div class="mb-3">
                <label for="cpuRequest" class="form-label">CPU Request:</label>
                <input type="text" class="form-control" id="cpuRequest" name="cpuRequest" placeholder="e.g. 100m" required>
            </div>

            <!-- Memory Request Input -->
            <div class="mb-3">
                <label for="memoryRequest" class="form-label">Memory Request:</label>
                <input type="text" class="form-control" id="memoryRequest" name="memoryRequest" placeholder="e.g. 512Mi" required>
            </div>

            <!-- CPU Limit Input -->
            <div class="mb-3">
                <label for="cpuLimit" class="form-label">CPU Limit:</label>
                <input type="text" class="form-control" id="cpuLimit" name="cpuLimit" placeholder="e.g. 200m" required>
            </div>

            <!-- Memory Limit Input -->
            <div class="mb-3">
                <label for="memoryLimit" class="form-label">Memory Limit:</label>
                <input type="text" class="form-control" id="memoryLimit" name="memoryLimit" placeholder="e.g. 1Gi" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">Create Environment</button>
        </form>

        <!-- Alert messages -->
        <div id="alertMessage" class="mt-3"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
    
    <!-- JavaScript for form submission -->
    <script>
        document.getElementById('createPodForm').addEventListener('submit', async function(event) {
            event.preventDefault(); // Prevent form from submitting the traditional way

            // Capture form data as JSON
            const formObject = {
                envName: document.getElementById('envName').value,
                image: document.getElementById('image').value,
                cpuRequest: document.getElementById('cpuRequest').value,
                memoryRequest: document.getElementById('memoryRequest').value,
                cpuLimit: document.getElementById('cpuLimit').value,
                memoryLimit: document.getElementById('memoryLimit').value,
            };

            // Submit the form data using fetch
            const response = await fetch('/create-pod', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formObject),
            });

            // Handle the response
            const alertMessage = document.getElementById('alertMessage');
            if (response.ok) {
                // Display success message
                alertMessage.innerHTML = `<div class="alert alert-success">Environment created successfully!</div>`;
            } else {
                // Display error message
                const errorMessage = await response.text();
                alertMessage.innerHTML = `<div class="alert alert-danger">Failed to create environment: ${errorMessage}</div>`;
            }
        });
    </script>
</body>
</html>
