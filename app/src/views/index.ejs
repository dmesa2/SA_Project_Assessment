<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a New Development Environment</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Create a New Development Environment</h1>
        <form action="/create-pod" method="POST">
            <!-- Docker Image Input -->
            <div class="mb-3">
                <label for="image" class="form-label">Docker Image:</label>
                <input type="text" class="form-control" id="image" name="image" placeholder="e.g. nginx:latest" required>
            </div>

            <!-- CPU Request Input -->
            <div class="mb-3">
                <label for="cpuRequest" class="form-label">CPU Request:</label>
                <input type="text" class="form-control" id="cpuRequest" name="cpuRequest" placeholder="e.g. 100m" required>
            </div>

            <!-- Memory Request Input -->
            <div class="mb-3">
                <label for="memoryRequest" class="form-label">Memory Request:</label>
                <input type="text" class="form-control" id="memoryRequest" name="memoryRequest" placeholder="e.g. 512Mi" required>
            </div>

            <!-- CPU Limit Input -->
            <div class="mb-3">
                <label for="cpuLimit" class="form-label">CPU Limit:</label>
                <input type="text" class="form-control" id="cpuLimit" name="cpuLimit" placeholder="e.g. 200m" required>
            </div>

            <!-- Memory Limit Input -->
            <div class="mb-3">
                <label for="memoryLimit" class="form-label">Memory Limit:</label>
                <input type="text" class="form-control" id="memoryLimit" name="memoryLimit" placeholder="e.g. 1Gi" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">Create Environment</button>
        </form>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

    <!-- Add basic JavaScript to check that limits are greater than or equal to requests -->
    <script>
        document.querySelector('form').addEventListener('submit', function(event) {
            const cpuRequest = document.getElementById('cpuRequest').value;
            const cpuLimit = document.getElementById('cpuLimit').value;
            const memoryRequest = document.getElementById('memoryRequest').value;
            const memoryLimit = document.getElementById('memoryLimit').value;

            // Compare CPU and Memory requests/limits
            if (parseFloat(cpuLimit) < parseFloat(cpuRequest) || parseFloat(memoryLimit) < parseFloat(memoryRequest)) {
                event.preventDefault(); // Stop form submission
                alert('CPU and Memory limits must be greater than or equal to their requests.');
            }
        });
    </script>
</body>
</html>
